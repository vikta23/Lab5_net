<Window x:Class="StudentApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Students" Height="600" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Вибір типу студента -->
        <ComboBox x:Name="StudentTypeComboBox" Width="150" Margin="0,0,0,10"
                  SelectionChanged="StudentTypeComboBox_SelectionChanged">
            <ComboBoxItem Content="Bachelor" IsSelected="True"/>
            <ComboBoxItem Content="Master"/>
            <ComboBoxItem Content="ExchangeStudent"/>
        </ComboBox>

        <!-- Ввід даних -->
        <StackPanel Grid.Row="1" x:Name="InputPanel" Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Full Name"/>
            <TextBox x:Name="FullNameTextBox"/>

            <TextBlock Text="Faculty"/>
            <TextBox x:Name="FacultyTextBox"/>

            <TextBlock Text="Course (1-6)"/>
            <TextBox x:Name="CourseTextBox"/>

            <!-- Bachelor-specific -->
            <TextBlock x:Name="CreditsLabel" Text="Credits per Semester"/>
            <TextBox x:Name="CreditsTextBox"/>

            <!-- Master-specific -->
            <TextBlock x:Name="ThesisTopicLabel" Text="Thesis Topic" Visibility="Collapsed"/>
            <TextBox x:Name="ThesisTopicTextBox" Visibility="Collapsed"/>

            <TextBlock x:Name="PublicationsLabel" Text="Publications Count" Visibility="Collapsed"/>
            <TextBox x:Name="PublicationsTextBox" Visibility="Collapsed"/>

            
            <TextBlock x:Name="HomeCountryLabel" Text="Home Country" Visibility="Collapsed"/>
            <TextBox x:Name="HomeCountryTextBox" Margin="0,0,0,5" Visibility="Collapsed"/>

            <TextBlock x:Name="ExchangeEndDateLabel" Text="Exchange End Date (yyyy-mm-dd)" Visibility="Collapsed"/>
            <TextBox x:Name="ExchangeEndDateTextBox" Margin="0,0,0,5" Visibility="Collapsed"/>

            <Button Content="Create Student" Click="CreateStudentButton_Click" Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Таблиця студентів -->
        <DataGrid x:Name="StudentsDataGrid" Grid.Row="2" AutoGenerateColumns="False" Margin="0,0,0,10"
                  SelectionMode="Single" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="*"/>
                <DataGridTextColumn Header="Faculty" Binding="{Binding Faculty}" Width="*"/>
                <DataGridTextColumn Header="Course" Binding="{Binding Course}" Width="*"/>
                <DataGridTextColumn Header="Type" Binding="{Binding StudentType}" Width="*"/>
                <DataGridTextColumn Header="Average" Binding="{Binding AverageGrade}" Width="*"/>
                <DataGridTextColumn Header="Rating" Binding="{Binding Rating}" Width="*"/>
                <DataGridTextColumn Header="Стипендія" Binding="{Binding ScholarshipStatus}" Width="*"/>
                <DataGridTextColumn Header="Обмін" Binding="{Binding ExchangeStatus}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Додавання оцінки і перегляд рейтингу -->
        <StackPanel Grid.Row="3" Orientation="Vertical">
            <TextBlock Text="Add Grade to Selected Student"/>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBox x:Name="GradeTextBox" Width="100" Margin="0,0,10,0"/>
                <Button Content="Add Grade" Click="AddGradeButton_Click" Width="100"/>
            </StackPanel>

            <Button Content="Show Top Student" Click="ShowTopStudentButton_Click" Width="200" Margin="0,5"/>
            <TextBlock x:Name="OutputTextBlock" TextWrapping="Wrap" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Window>